        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <!--android:theme="@style/AppTheme"-->

        <activity android:name=".ActiviteAccueil"
            android:icon="@drawable/rs_launcher"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ActiviteAjout"
            android:label="@string/label_new_entry" />

        <activity android:name=".ActiviteParam"
            android:label="@string/label_settings"/>

        <activity android:name=".ActiviteStats"
            android:label="@string/label_stats"/>

        <activity android:name=".ActiviteGraph"
            android:label="@string/graph"/>

        <activity android:name=".ActiviteHistorique"
            android:label="@string/label_histo"/>
    </application>

</manifest>
