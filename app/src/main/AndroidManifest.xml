<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="fr.cva.ldnr.runningstats">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <!--android:theme="@style/AppTheme"-->

        <activity
            android:name=".ActiviteAccueil"
            android:icon="@drawable/rs_launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActiviteAjout"
            android:label="@string/label_new_entry"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ActiviteParam"
            android:label="@string/label_settings"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ActiviteStats"
            android:label="@string/label_stats"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ActiviteGraph"
            android:label="@string/graph"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ActiviteHistorique"
            android:label="@string/label_histo"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
